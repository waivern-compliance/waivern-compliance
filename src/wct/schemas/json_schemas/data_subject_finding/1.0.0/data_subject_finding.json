{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "findings": {
      "type": "array",
      "description": "List of data subject findings from GDPR compliance analysis",
      "items": {
        "type": "object",
        "properties": {
          "primary_category": {
            "type": "string",
            "description": "Primary data subject category from GDPR Article 30(1)(c) - validated by analyser against ruleset"
          },
          "confidence_score": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "description": "Confidence score for the classification (0-100)"
          },
          "confidence_level": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Confidence level based on score thresholds"
          },
          "supporting_evidence": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Evidence that supports this classification"
          },
          "modifiers": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["MINOR", "EU_RESIDENT"]
            },
            "description": "Cross-category regulatory modifiers"
          },
          "requires_manual_review": {
            "type": "boolean",
            "description": "Whether this classification requires manual review"
          },
          "matched_patterns": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Specific patterns that were matched during classification"
          },
          "metadata": {
            "type": "object",
            "additionalProperties": false,
            "description": "Metadata from the original data source",
            "properties": {
              "source": {
                "type": "string",
                "description": "Source identifier where the data was found"
              }
            },
            "required": ["source"]
          }
        },
        "required": ["primary_category", "confidence_score", "confidence_level", "supporting_evidence", "modifiers", "requires_manual_review", "matched_patterns", "metadata"],
        "additionalProperties": false
      }
    },
    "summary": {
      "type": "object",
      "description": "Summary statistics of the data subject analysis",
      "properties": {
        "total_classifications": {
          "type": "integer",
          "description": "Total number of data subject classifications",
          "minimum": 0
        },
        "high_confidence_count": {
          "type": "integer",
          "description": "Number of high confidence classifications",
          "minimum": 0
        },
        "categories_identified": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of unique categories identified"
        },
        "manual_review_required": {
          "type": "integer",
          "description": "Number of classifications requiring manual review",
          "minimum": 0
        },
        "confidence_distribution": {
          "type": "object",
          "properties": {
            "high": {
              "type": "integer",
              "minimum": 0
            },
            "medium": {
              "type": "integer",
              "minimum": 0
            },
            "low": {
              "type": "integer",
              "minimum": 0
            }
          },
          "required": ["high", "medium", "low"],
          "additionalProperties": false,
          "description": "Distribution of classifications by confidence level"
        }
      },
      "required": ["total_classifications", "high_confidence_count", "categories_identified", "manual_review_required", "confidence_distribution"],
      "additionalProperties": false
    },
    "analysis_metadata": {
      "type": "object",
      "description": "Metadata about the analysis process",
      "properties": {
        "ruleset_used": {
          "type": "string",
          "description": "Name of the data subject ruleset used for analysis"
        },
        "llm_validation_enabled": {
          "type": "boolean",
          "description": "Whether LLM validation was enabled for this analysis"
        },
        "analysis_timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when the analysis was performed"
        }
      },
      "required": ["ruleset_used", "llm_validation_enabled", "analysis_timestamp"],
      "additionalProperties": true
    }
  },
  "required": ["findings", "summary", "analysis_metadata"]
}
