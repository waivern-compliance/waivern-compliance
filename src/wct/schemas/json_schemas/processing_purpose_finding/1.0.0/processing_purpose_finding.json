{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "purpose": {
            "type": "string",
            "description": "The full processing purpose name (e.g., 'Artificial Intelligence Compliance Management', 'Customer Service and Support')"
          },
          "purpose_category": {
            "type": "string",
            "description": "The broad category of the processing purpose"
          },
          "risk_level": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Risk level associated with this processing purpose"
          },
          "compliance": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "regulation": {
                  "type": "string",
                  "description": "Regulation name (e.g., GDPR, CCPA)"
                },
                "relevance": {
                  "type": "string",
                  "description": "Specific relevance to this regulation"
                }
              },
              "required": ["regulation", "relevance"],
              "additionalProperties": false
            },
            "description": "Compliance information with regulation names and specific relevance"
          },
          "matched_pattern": {
            "type": "string",
            "description": "The specific pattern that was matched to identify this purpose"
          },
          "evidence": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string",
                  "description": "The evidence content snippet"
                },
                "collection_timestamp": {
                  "type": "string",
                  "format": "date-time",
                  "description": "ISO 8601 timestamp when the evidence was collected"
                }
              },
              "required": ["content", "collection_timestamp"]
            },
            "description": "Evidence objects with content and collection timestamps"
          },
          "metadata": {
            "type": "object",
            "additionalProperties": false,
            "description": "Additional metadata about where and how this purpose was identified",
            "properties": {
              "source": {
                "type": "string",
                "description": "Source file or location where the purpose was identified"
              }
            },
            "required": ["source"]
          }
        },
        "required": ["purpose", "purpose_category", "risk_level", "compliance", "matched_pattern", "evidence", "metadata"],
        "additionalProperties": false
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "total_findings": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of processing purpose findings"
        },
        "purposes_identified": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of unique processing purposes identified"
        },
        "high_risk_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of high risk processing purpose findings"
        },
        "purpose_categories": {
          "type": "object",
          "additionalProperties": {
            "type": "integer",
            "minimum": 0
          },
          "description": "Count of findings by purpose category"
        },
        "risk_level_distribution": {
          "type": "object",
          "properties": {
            "low": {
              "type": "integer",
              "minimum": 0
            },
            "medium": {
              "type": "integer",
              "minimum": 0
            },
            "high": {
              "type": "integer",
              "minimum": 0
            }
          },
          "required": ["low", "medium", "high"],
          "additionalProperties": false,
          "description": "Distribution of findings by risk level"
        }
      },
      "required": ["total_findings", "purposes_identified", "high_risk_count", "purpose_categories", "risk_level_distribution"],
      "additionalProperties": false
    },
    "analysis_metadata": {
      "type": "object",
      "properties": {
        "ruleset_used": {
          "type": "string",
          "description": "Name of the ruleset used for analysis"
        },
        "llm_validation_enabled": {
          "type": "boolean",
          "description": "Whether LLM validation was enabled for this analysis"
        },
        "evidence_context_size": {
          "type": "string",
          "description": "Size of context used for evidence extraction"
        }
      },
      "required": ["ruleset_used", "llm_validation_enabled", "evidence_context_size"],
      "additionalProperties": true
    }
  },
  "required": ["findings", "summary", "analysis_metadata"]
}
