{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "type": "object",
  "title": "WCT Runbook Schema",
  "description": "JSON Schema for WCT runbook YAML files with cross-validation",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Runbook display name"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Runbook description explaining its purpose"
    },
    "connectors": {
      "type": "array",
      "minItems": 1,
      "description": "List of data source connectors",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9._-]+$",
            "minLength": 1,
            "description": "Connector instance name"
          },
          "type": {
            "type": "string",
            "minLength": 1,
            "description": "Connector type identifier"
          },
          "properties": {
            "type": "object",
            "description": "Connector-specific configuration properties"
          }
        },
        "required": ["name", "type", "properties"],
        "additionalProperties": false
      }
    },
    "analysers": {
      "type": "array",
      "minItems": 1,
      "description": "List of analysis processors",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9._-]+$",
            "minLength": 1,
            "description": "Analyser instance name"
          },
          "type": {
            "type": "string",
            "minLength": 1,
            "description": "Analyser type identifier"
          },
          "properties": {
            "type": "object",
            "description": "Analyser-specific configuration properties"
          },
          "metadata": {
            "type": "object",
            "description": "Optional metadata for the analyser"
          }
        },
        "required": ["name", "type", "properties"],
        "additionalProperties": false
      }
    },
    "execution": {
      "type": "array",
      "minItems": 1,
      "description": "Execution pipeline steps",
      "items": {
        "type": "object",
        "properties": {
          "connector": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9._-]+$",
            "minLength": 1,
            "description": "Name of connector instance to use"
          },
          "analyser": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9._-]+$",
            "minLength": 1,
            "description": "Name of analyser instance to use"
          },
          "input_schema_name": {
            "type": "string",
            "minLength": 1,
            "description": "Schema name for connector output validation"
          },
          "output_schema_name": {
            "type": "string",
            "minLength": 1,
            "description": "Schema name for analyser output validation"
          },
          "context": {
            "type": "object",
            "description": "Optional execution metadata and runtime configuration"
          }
        },
        "required": ["connector", "analyser", "input_schema_name", "output_schema_name"],
        "additionalProperties": false
      }
    }
  },
  "required": ["name", "description", "connectors", "analysers", "execution"],
  "additionalProperties": false
}
