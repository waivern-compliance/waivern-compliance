{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "source": {
      "type": "string",
      "description": "Source file path or identifier"
    },
    "encoding": {
      "type": "string",
      "description": "Content encoding used"
    },
    "file_metadata": {
      "type": "object",
      "description": "File metadata from the source",
      "additionalProperties": true
    },
    "content_length": {
      "type": "integer",
      "description": "Length of analyzed content in characters",
      "minimum": 0
    },
    "findings": {
      "type": "array",
      "description": "List of sensitive information findings",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Type of finding (e.g., email, api_key, potential_password)"
          },
          "count": {
            "type": "integer",
            "description": "Number of occurrences found",
            "minimum": 0
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"],
            "description": "Severity level of the finding"
          },
          "samples": {
            "type": "array",
            "description": "Sample matches (limited for security)",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["type", "count", "severity"]
      }
    },
    "risk_score": {
      "type": "integer",
      "description": "Overall risk score (0-100)",
      "minimum": 0,
      "maximum": 100
    },
    "risk_level": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Overall risk level assessment"
    },
    "analysis_metadata": {
      "type": "object",
      "description": "Metadata about the analysis performed",
      "properties": {
        "sensitivity_level": {
          "type": "string",
          "description": "Sensitivity level used for analysis"
        },
        "patterns_checked": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of pattern types checked"
        }
      },
      "required": ["sensitivity_level", "patterns_checked"]
    }
  },
  "required": ["source", "findings", "risk_score", "risk_level", "analysis_metadata"]
}
